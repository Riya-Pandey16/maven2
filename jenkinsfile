@Library('mylibrary') _

pipeline {
    agent none

    tools {
        maven 'maven-3'
        jdk 'java-17'
    }

    environment {
       QA_SERVER   = "ubuntu@172.31.77.87"
        PROD_SERVER = "ubuntu@172.31.71.63"

    }

    triggers {
        githubPush()
    }

    stages {

        stage('Checkout') {
            agent { label 'myslave' }
            steps {
                checkout scm
            }
        }

        stage('Build & Unit Test') {
            agent { label 'myslave' }
            steps {
                buildApp()
            }
        }

        stage('Parallel QA Activities') {
            parallel {

                stage('Deploy to QA') {
                    agent { label 'myslave' }
                    steps {
                        deployTomcat(QA_SERVER, "target/*.war")
                    }
                }

                stage('Run Selenium Tests') {
                    agent { label 'myslave' }
                    steps {
                        git url: 'https://github.com/Riya-Pandey16/FunctionalTesting.git'
                        runSelenium()
                    }
                }
            }
        }

        stage('Manual Approval') {
            steps {
                input message: "Deploy to Production?"
            }
        }

        stage('Deploy to Prod') {
            agent { label 'myslave' }
            steps {
                deployTomcat(PROD_SERVER, "target/*.war")
            }
        }
    }

    post {
        success {
            sendMail("SUCCESS")
        }
        failure {
            sendMail("FAILED")
        }
    }
}
