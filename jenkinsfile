@Library('mylibrary') _

pipeline {
    agent none

    triggers {
        githubPush()
    }

    stages {

        stage('Checkout') {
            agent { label 'myslave' }
            steps {
                checkout scm
            }
        }

        stage('Build & Unit Test') {
            agent { label 'myslave' }
            steps {
                buildApp()
            }
        }

        stage('Parallel QA Activities') {
            parallel {

                stage('Deploy to QA') {
                    agent { label 'myslave' }
                    steps {
                        deployTomcat(
                            'webapp/target/webapp.war',
                            '/home/ubuntu/cicd.pem',
                            '172.31.77.87'
                        )
                    }
                }

                stage('Run Selenium Tests') {
                    agent { label 'myslave' }
                    steps {
                        git url: 'https://github.com/Riya-Pandey16/FunctionalTesting.git'
                        runSelenium()
                    }
                }
            }
        }

        stage('Manual Approval') {
            agent any
            steps {
                input message: "Deploy to Production?"
            }
        }

        stage('Deploy to Prod') {
            agent { label 'myslave' }
            steps {
                deployTomcat(
                    'webapp/target/webapp.war',
                    '/home/ubuntu/cicd.pem',
                    '172.31.71.63'
                )
            }
        }
    }

    post {
        success {
            sendMail("SUCCESS")
        }
        failure {
            sendMail("FAILED")
        }
    }
}
